    <style name="AppCompatAlertDialogStyle"
           parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/barChatOrange</item>
        <item name="android:textColorPrimary">@color/whiter</item>
        <item name="android:gravity">center</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:icon">@drawable/plus</item>
        <item name="android:textColor">@color/redLineColor</item>
    </style>

